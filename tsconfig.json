{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": "./src",
      "typeRoots": [
        "./src/types",
        "./node_modules/@types",
        "../node_modules/@types"
      ],
      "paths": {
        "*": [
            "node_modules/*",
            "src/types/*"
        ]
    }
    },
    "lib": ["es2015"],
    "exclude": ["node_modules"]
}